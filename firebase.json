{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/(index.html|revision.txt|service-worker.js)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=0"
        }]
      }
    ]
  }
}
