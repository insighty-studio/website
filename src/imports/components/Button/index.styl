@import "~styles/config.styl"

.button
  outline none
  cursor pointer
  text-transform uppercase
  font-weight $medium-weight
  height 48px
  font-size 16px
  border none
  color $blue
  background none
  padding 0
  margin 0
  display: flex
  align-items center
  position: relative
  border-radius @height
  white-space nowrap
  transition margin .4s

  &:hover
    .button-title, .button-hover-text
      padding-left: 20px

    .button-icon svg
      transform translateX(-3px)

    .button-title
      margin-right: 0

    .button-hover-text
      width: 100% !important

      span
        padding-right: 0
        transform: translateX(0)

  &:disabled
    opacity 0.9

  .button-title
    margin-right 20px
    transition padding .4s, margin .4s

  .button-hover-text
    position: absolute
    background: $blue
    color: white
    height: 48px
    border-radius @height
    right: 0
    z-index: 2
    display: flex
    align-items center
    width: 48px
    overflow: hidden
    transition width .4s, padding .4s
    box-shadow: 0 4px 16px 0 rgba(0,94,255,0.25)

    span
      position: absolute
      padding-right: 20px
      transform: translateX(-100%)
      transition padding .4s, transform .4s

  .button-icon
    background: $blue
    width: 48px
    height: @width
    display: flex
    align-items center
    justify-content center
    border-radius @width
    position: relative
    z-index: 3

    svg
      display: block
      transition transform .4s
