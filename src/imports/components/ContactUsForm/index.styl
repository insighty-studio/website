.contact-us-form
  display flex
  flex-direction column
  background-color white

  .section-heading
    margin-top 120px

  form
    display flex
    flex-direction column
    align-self center
    align-items center
    margin-top 64px
    padding-bottom 64px

    .form-raw
      margin-bottom 32px

      .input:last-child
        margin-left 32px

    .text-area
      width 676px
      margin-bottom 64px

    .form-btn
      font-family 'Roboto Mono'
      line-height 21px
      font-weight $medium-weight

  .form-message
    display flex
    justify-content center
    height 20px
    margin 22px 0 54px
    color $grayish-blue
    font-size $small
    line-height 20px
    letter-spacing 0.1px
    transition 1s

  .notification-container
    width auto

    span .notification
      font-size 18px
      text-transform uppercase
      box-shadow none
      border-radius 50px
      padding 18px 32px

      &.notification-success
        font-family Roboto Mono
        background-color $green

      &:before
        content none
