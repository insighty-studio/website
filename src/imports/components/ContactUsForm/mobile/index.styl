.contact-us-form
  +iphone()
    display block
    width 100%
    max-width 100%
    margin 0
    padding 0 40px

    +iphone5()
      padding 0 30px

    .section-heading
      margin 0
      padding-top 64px

      div:last-child
        letter-spacing 6px

    form
      margin-top 40px

      .form-raw
        margin-bottom 0

        .input
          width 100%
          margin-bottom 12px
          background-color white

          +iphone5()
            margin-bottom 10px

        .input:last-child
          margin 0 0 12px

          +iphone5()
            margin 0 0 10px

      .text-area
        width 100%
        margin-bottom 32px

      .input, .text-area
        box-shadow inset 0 1px 0 0 rgba(0,0,0,0.07), 0 4px 8px 0 rgba(0,0,0,0.03)
        background-color white

    .form-message
      margin 22px 0 10px

    .footer
      display block
      text-align center
      margin-bottom 0

      .footer-details
        text-align center
        margin-bottom 32px

        +iphone5()
          margin-bottom 30px
