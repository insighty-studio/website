.header
  background-color white
  display flex
  align-items center
  position sticky
  top 0
  width 100vw
  padding 4vh 10%
  z-index 3

  .header-nav
    list-style-type none
    display flex
    flex-direction row
    justify-content space-between
    margin-left auto

    .header-nav-item
      text-decoration none
      color rgba(0, 0, 0, 0.6)
      font-size 14px
      margin 0 1.2vw
      letter-spacing 0.88pt
      cursor pointer
      text-transform uppercase
      position relative
      transition color .4s

      &.active-path
        font-weight 500
        color black

      &:before
        content ''
        display block
        height 2px
        background #FF5551
        width 0
        position absolute
        bottom -0.5vh
        right 0
        transition width .4s

      &:hover
        color black

        &:before
          width 100%
          left 0

  .header-link
    margin-left 5vw

  .menu-icon, .close-menu-icon
    display none

