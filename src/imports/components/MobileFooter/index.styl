.mobile-footer
  width 100%
  height 100%
  background-color #5C64AA
  display flex
  flex-direction column
  align-items center
  justify-content center

  .logo-link
    padding 0

  .mobile-footer-nav
    margin 0
    padding 20px 0 0 0
    display flex
    flex-direction column
    align-items center

    .mobile-footer-nav-item
      color white
      text-decoration none
      text-transform uppercase
      margin-bottom 12px

  .consult-button
    color #5C64AA
    font-size 13px
    text-transform uppercase
    text-decoration none
    font-weight bold
    background-color white
    padding 12px 16px
    border-radius 32px
    margin-top 16px

  .socials
    height 18px
    width 40%
    margin-top 50px
    display flex
    flex-direction row
    justify-content space-between

    a
      svg
        width 16px
        height 16px
        fill rgba(255,255,255,0.4)

  .info
    margin-top 16px
    text-align center

    a, p
      font-size 3.7vw
      color rgba(255,255,255,0.4)
      text-decoration none
      margin 0

