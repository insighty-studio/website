.menu-icon-button
  background none
  border none
  padding 0
  cursor pointer

.mobile-header
  height 80px
  width 100%
  margin 0
  padding 0
  position fixed
  z-index 1
  background-color white

  .mobile-closed-menu
    height 100%
    width 100%
    margin 0
    padding 0 8% 0 10%
    display flex
    flex-direction row
    align-items center
    justify-content space-between

    .consult-button
      color white
      font-size 13px
      text-transform uppercase
      text-decoration none
      font-weight bold
      background-color #5C64AA
      padding 12px 16px
      border-radius 32px

.mobile-opened-menu
  position fixed
  width 100%
  height 100%
  background-color #5C64AA
  transform translateX(-100%)
  transition transform 800ms cubic-bezier(0.19, 1, 0.22, 1)

  &.active
    background-color #5C64AA
    transform translateX(0)

  .opened-menu-top-bar
    height 80px
    width 100%
    margin 0
    padding 0 8% 0 10%
    display flex
    flex-direction row
    align-items center
    justify-content space-between

  .mobile-header-nav
    padding 0 8% 0 10%
    height 65%
    width 100%
    margin 0
    display flex
    flex-direction column
    justify-content space-evenly

    .mobile-header-nav-item
      color #fff
      text-decoration none
      font-size 4.8vw
      text-transform uppercase

  .socials
    width 100%
    height 20px
    position absolute
    bottom 20px
    padding 0 8% 0 10%

    svg
      height 18px
      width 18px
      fill white
      margin-right 24px
