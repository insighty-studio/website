.about-section
  display flex
  flex-direction column
  position relative
  padding 0 32px
  overflow hidden

  .desc
    display flex
    max-width 1320px
    width 100%
    z-index 1
    margin 0 auto
    justify-content space-evenly
    flex-wrap wrap
    align-items center
    min-height 450px

    +iphone()
      justify-content normal

    .short ul
      margin 0 auto
      padding-left 0
      width 280px

      li
        font-size 20px
        font-weight 700
        color #999
        list-style none
        margin-bottom 15px

        span
          color $white

        &:last-item
          margin-bottom 0

    .story
      width 660px
      font-weight 500
      font-size 36px
      color $white

      span
        color #FFD900
