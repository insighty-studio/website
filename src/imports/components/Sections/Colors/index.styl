.colors-section
  display flex
  align-items center
  position relative
  height 400px
  padding 0 32px
  overflow hidden

  .section-name
    color $white

  .colors
    display flex
    max-width 1320px
    margin 0 auto
    flex-grow 1
    justify-content space-between
    z-index 1
    font-family Quicksand
    font-style Italic
    font-weight 700

    .color
      width 25%

      .color-info
        margin-left 90px
        font-size 22px
        color $white

      .color-circle
        width 100px
        height 100px
        -webkit-box-shadow 0 2px 7px 0 rgba(0,0,0,0.5)
        -moz-box-shadow 0 2px 7px 0 rgba(0,0,0,0.5)
        box-shadow 0 2px 7px 0 rgba(0,0,0,0.5)
        border-radius 50px
