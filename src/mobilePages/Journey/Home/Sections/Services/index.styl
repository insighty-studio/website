.services-section
  position relative
  height calc(100% - 80px)
  width 100%
  padding 0 8% 32px 10%
  overflow hidden

  .services-cards
    height 100%
    width 100%
    display flex
    flex-direction row
    flex-wrap wrap

    .logo
      width calc(50% - 14px)
      height auto
      margin 7px 0 7px 0
      display flex
      flex-direction column
      justify-content center
      align-items center
      flex-shrink 0
      flex-grow 1
      background-color #F7F9FC

      svg
        height 65%
        width 65%
        opacity 0.8

      &:nth-child(odd)
        margin-right 7px

      &:nth-child(even)
        margin-left 7px

  +iphone5()
    .services-heading
      margin 0 0 12px 0
      font-size 6.5vw
