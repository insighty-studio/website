@import '~styles/config.styl'

.lpma-page
  .colors-section
    height 24vw
    z-index 1
    position relative
    font-family: Rubik, sans-serif;
    display: flex
    align-items: center
    justify-content: center
    margin 0 auto 128px

    .colors
      font-style normal

    .colors .color .color-info
      font-weight $bold-weight
      font-size 22.4px

    .section-name
      font-size 29vw
      line-height 21.2766vw
      color #ffffff
      opacity 0.06
