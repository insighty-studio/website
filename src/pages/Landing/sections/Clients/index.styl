@import "~styles/config.styl"

.clients
  position relative
  overflow hidden
  display flex
  flex-direction column
  align-items center
  height 100vh
  padding 120px 0
  background #FFDA30

  span
    display flex
    justify-content center

  .section-heading
    z-index 2
    margin-bottom 80px

  .pagination
    display flex
    flex 1
    align-items flex-end

  .element:last-child
    margin-right 0

  .background
    left 50%
    bottom 0
    position absolute
    margin-left 138px

    svg
      vertical-align middle
