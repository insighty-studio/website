.clients
  position relative

  .background
    position absolute
    height 100%
    width 100%

  .content
    position relative
    overflow hidden
    display flex
    flex-direction column
    justify-content space-between
    align-items center
    height 100vh
    padding 60px 0
    opacity 1

    +iphone()
      height 100%

    .client-footer
      +iphone()
        margin-top 24px

    .project-details-btn, .full-review-btn
      .button-title
        color $black

      .button-icon
        background-color $black

    .project-details-btn
      +iphone()
        margin 0

    &.animated
      animation ClientBlock 1.4s ease forwards

    span
      display flex
      justify-content center

    .pagination
      display flex
      align-items flex-end

      +iphone()
        display none

    .element:last-child
      margin-right 0

      svg
        vertical-align middle

  .clients-animation
    height 100vh
    width 100%
    z-index 9
    position absolute
    animation LayersOut .4s cubic-bezier(0.4, 0, 1, 1) forwards
    animation-delay .8s

    .light-layer, .dark-layer
      position absolute
      top 0
      height 100vh
      width 100%

    .light-layer
      z-index 10
      background-color $dark-blue
      animation LayersIn .6s cubic-bezier(0.4, 0, 0.2, 1) forwards

    .dark-layer
      z-index 11
      transform translateX(100%)
      background-color $snow
      animation LayersIn .6s cubic-bezier(0.4, 0, 0.2, 1) forwards
      animation-delay .2s

@keyframes LayersOut
  0%
    transform translateX(0)

  100%
    transform translateX(-100%)

@keyframes LayersIn
  0%
    transform translateX(100%)

  100%
    transform translateX(0)

@keyframes ClientBlock
  0%
    transform translateX(0)

  50%
    transform translateX(-200px)

  51%, 70%
    transform translateX(80px)

  100%
    transform translateX(0)
