@import '~styles/config.styl'

.header
  height 100vh
  overflow: hidden
  background-image: linear-gradient(-180deg, rgba(0,84,255,0.00) 0%, rgba(0,77,255,0.10) 100%)

  +iphone()
    padding: 40px
    background url(./images/main-art-mobile@2x.png) center bottom no-repeat
    background-size 100% auto

  .content
    display flex
    flex-direction row
    max-width 1160px
    margin 0 auto
    height: 100%
    position: relative
    align-items center
    padding-top: 48px

    +iphone()
      max-width: 100%
      width: 100%

    .content-info
      display flex
      flex-direction column
      justify-content center
      min-height 560px
      width 440px

      +iphone()
        width: 100%
        margin: 0
        display block
        margin-top: 32px

      .paragraph
        opacity 0.8

      .title

        +iphone()
          font-size: 21px
          line-height: 1.5
          margin-bottom: 16px

      .desc
        color $dark-gray
        line-height 32px

        +iphone()
          line-height: 2

      .buttons
        display flex
        margin-top 38px

        iphoneDisabled()

        .explore-btn
          margin-right 32px

          svg
            margin-top: 1px
