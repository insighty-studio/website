@import '~styles/animations.styl'

.header
  height 100vh
  overflow hidden
  background-image linear-gradient(-180deg, rgba(0,84,255,0.00) 0%, rgba(0,77,255,0.10) 100%)
  animation shadeIn .8s ease-out forwards
  animation-delay 1.2s

  .content
    display flex
    flex-direction row
    max-width 1160px
    margin 0 auto
    height 100%
    position relative
    align-items center
    padding 48px 32px 0

    .content-info
      display flex
      flex-direction column
      justify-content center
      min-height 560px
      width 440px

      .heading
        .sub-title
          font-weight 400

      .paragraph
        opacity 0.8

      .buttons
        display flex
        margin-top 38px

        .explore-btn
          margin-right 32px

          svg
            margin-top 1px
